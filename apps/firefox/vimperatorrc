" Leader (must come before mappings)
" Can't use <Space> :(
let mapleader = ","

" Basic settings
set incsearch
set hlsearch
set ignorecase
set smartcase

" Use Google
set defsearch=google
set suggestengines=google

" Scrolling
nnoremap j 4j
nnoremap k 4k
nnoremap h 4h
nnoremap l 4l

" Tmux style tabs
map <A-l> :tabnext<CR>
map <A-h> :tabprevious<CR>
map <C-a>x d

" Reload ~/.vimperatorrc
noremap <Leader>vr :source ~/.vimperatorrc<CR>

" Don't auto-start navigation in insert mode
set gui=nobookmarks
set focuscontent

" Colorscheme
colorscheme zenburn

" Better hint chars
set hintchars=hjklasdfgyuiopqwertnmzxcvb
" vim: ft=vim ts=4 sw=4 sts=0 et
